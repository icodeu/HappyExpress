<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_iv_grab_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sendpackage_detail_icon_send"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/id_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_grab_icon"
        android:layout_marginLeft="5dp"
        android:text="取货地址:" />

    <TextView
        android:id="@+id/id_tv_send_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_tv_address"
        android:layout_alignTop="@id/id_tv_address"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="80dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="北京" />

    <TextView
        android:id="@+id/id_tv_grab_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_address"
        android:layout_alignLeft="@id/id_tv_address"
        android:text="抢单时间:" />

    <TextView
        android:id="@+id/id_tv_grab_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_tv_grab_time_label"
        android:layout_alignTop="@id/id_tv_grab_time_label"
        android:text="time"/>

    <TextView
        android:id="@+id/id_tv_is_payed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_toRightOf="@id/id_tv_grab_time"
        android:layout_alignTop="@id/id_tv_grab_time"
        android:layout_marginLeft="3dp"
        android:background="@color/tangelo"
        android:textColor="@color/white"
        android:text="未支付"/>

    <Button
        android:id="@+id/id_btn_track_number"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/sel_green_button"
        android:text="填写运单号"/>

</RelativeLayout>