<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_iv_grab_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sendpackage_detail_icon_send"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/id_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_grab_icon"
        android:layout_marginLeft="5dp"
        android:text="取货地址:" />

    <TextView
        android:id="@+id/id_tv_send_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_tv_address"
        android:layout_alignTop="@id/id_tv_address"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="46dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="北京" />

    <TextView
        android:id="@+id/id_tv_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_address"
        android:layout_alignLeft="@id/id_tv_address"
        android:text="距离您:" />

    <TextView
        android:id="@+id/id_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_tv_dis"
        android:layout_alignTop="@id/id_tv_dis"
        android:layout_marginLeft="3dp"
        android:text="30m" />

    <Button
        android:id="@+id/id_btn_grab_order"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/sel_green_button"
        android:text="抢!"/>

</RelativeLayout>