<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.icodeyou.happyexpress">

    <!-- ShareSDK -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyThemeLightGreen"
        tools:replace="android:icon, android:theme">
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="28cdd88b92f1352b583aa1f4da0b34e3" />

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.sendexpress.SendExpressActivity" />
        <activity
            android:name=".activity.sendexpress.ComeDoorOrderActivity"
            android:label="@string/title_activity_come_door_order"
            android:theme="@style/MyThemeLightGreen" />
        <activity
            android:name=".activity.sendexpress.GrabOrderActivity"
            android:label="@string/title_activity_grab_order"
            android:theme="@style/MyThemeLightGreen" />
        <activity
            android:name=".activity.sendexpress.PublishGrabOrderActivity"
            android:label="@string/title_activity_publish_grab_order"
            android:theme="@style/MyThemeLightGreen" />
        <activity
            android:name=".activity.queryexpress.QueryExpressActivity"
            android:label="@string/title_activity_query_express"
            android:theme="@style/MyThemeLightGreen" />

        <service android:name="com.amap.api.location.APSService" />

        <activity
            android:name=".activity.poststation.PostStationDetailActivity"
            android:label="@string/title_activity_post_station_detail"
            android:theme="@style/MyThemeLightGreen" />
        <activity
            android:name=".activity.helptake.HelpTakeDetailActivity"
            android:label="@string/title_activity_post_station_detail"
            android:theme="@style/MyThemeLightGreen" />
        <activity
            android:name="c.b.a.A"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="c.b.a.B"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".activity.helptake.PublishHelpTakeActivity"></activity>
    </application>

</manifest>